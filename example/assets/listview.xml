<YalbTree>
    <YalbStyle name="DarkGray">
        <_color a="255" b="100" g="100" r="100" />
        <_padding __EdgeInsets="" value="5" />
        <_height value="30" />
    </YalbStyle>

    <YalbStyle name="LightGray">
        <_color a="255" b="150" g="150" r="150" />
        <_padding __EdgeInsets="" value="5" />
        <_height value="30" />
    </YalbStyle>

    <YalbBlockDef name="HeaderBlock">
        <Container>
            <_color a="255" b="100" g="150" r="100" />
            <_padding __EdgeInsets="" value="5" />
            <_height value="30" />
            <Text data="$headerText" />
        </Container>
    </YalbBlockDef>

    <YalbBlockDef name="RowBlock">
        <Container _yalbStyle="$styleName">
            <Text data="$rowText" />
        </Container>
    </YalbBlockDef>
    <Column>
        <Container height="300" width="400">
            <!-- Autodetect constructor for Listview -->
            <ListView>
                <YalbWidgetFactory provider="@prv" />
            </ListView>
        </Container>
        <Container height="50" width="400">
            <!-- Autodetect second constructor for Listview -->
            <ListView itemBuilder="@itemBuilder" itemCount="2" />
        </Container>
        <Container height="50" width="400">
            <!-- We point explicit to ListView.builder() constructor for Listview -->
            <ListView __ListView="builder" itemBuilder="@itemBuilder"/>
        </Container>
    </Column>
</YalbTree>