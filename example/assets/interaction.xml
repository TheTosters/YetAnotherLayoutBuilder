<Center>
    <Container width="300">
        <Column>
            <Row>
                <Text data="Checkbox to click" />
                <Checkbox onChanged="@onCheckboxChange" value="@checked" />
            </Row>
            <Row>
                <Text data="Enter value:" />
                <Container width="100">
                    <_margin __EdgeInsets="only" bottom="15"/>
                    <TextField onChanged="@onTextChange" onEditingComplete="@onTextEditDone" />
                </Container>
                <TextButton onPressed="@onBtnPressed">
                    <Text data="Update text" />
                </TextButton>
            </Row>
            <Row>
                <Text data="Text which you entered:" />
                <Text data="$enteredText" />
            </Row>
        </Column>
    </Container>
</Center>